<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="158px"
    android:background="#333333">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:id="@+id/iv_back"
        android:src="@drawable/back_normal"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/tv_btn_left"
        android:textColor="@color/headbar_textcolor"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/iv_back"
        android:layout_marginBottom="48px"
        android:layout_marginStart="57px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:textColor="@color/headbar_textcolor"
        android:id="@+id/tv_btn_right"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"/>
</RelativeLayout>